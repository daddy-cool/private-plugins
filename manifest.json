{
  "manifest_version": 2,
  "name": "Private Plugins",
  "description": "Blocks your browser from telling websites what plugins you have installed. Specific plugins can be re-enabled once or always for a given website.",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts" : [{
    "matches" : ["<all_urls>"],
    "js" : ["content.js"],
    "run_at": "document_start"
  }],
  "permissions": ["storage"],
  "icons": {
    "16": "images/icon32.png",
    "48": "images/icon64.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_title": "Private Plugins",
    "default_popup": "popup.html"
  }
}
